// Vai fazer a Média de faturamento por Loja e por Mês/Ano
Média de Faturamento por Loja po Mês = 
AVERAGEX(
    CROSSJOIN(
        VALUES('Cadastro Lojas'[Nome da Loja]),
        VALUES(Calendario[Mes/Ano])
    ),
    [Faturamento Total]
)


