// Vai retornar o Máximo que o Clinete gastou em um Ano
Máximo que um Cliente Já Gastou = 
MAXX(
    CROSSJOIN(
        VALUES('Cadastro Clientes'[ID Cliente]),
        VALUES(Calendario[Ano])
        ),
        [Faturamento Total]
)

